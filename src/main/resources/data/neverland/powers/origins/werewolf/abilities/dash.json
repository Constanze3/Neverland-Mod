{
    "name": "Dash",
    "description": "TODO description",
    "type": "origins:multiple",
    "bar-cooldown": {
        "type": "origins:cooldown",
        "cooldown": 120,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 4
        }
    },
    "i-dash-count": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "start_value": 3,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
            "bar_index": 16
        }
    },
    "b-run-reload-dashes": {
        "type": "origins:resource",
        "min": 0,
        "max": 1
    },
    "b-reloading-dashes": {
        "type": "origins:resource",
        "min": 0,
        "max": 1
    },
    "main": {
        "type": "origins:active_self",
        "key": {
            "key": "key.origins.primary_active"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_i-dash-count",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "info": "particle effect",
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:execute_command",
                            "command": "particle minecraft:sweep_attack ~ ~ ~ 0.5 0.2 0.5 0 10"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "particle minecraft:crit ~ ~ ~ 0.5 0.7 0.5 2 30"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "particle minecraft:dust 0 0 0 1 ~ ~ ~ 0.4 0.5 0.4 100 100"
                        }
                    ]
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:speed",
                        "duration": 5,
                        "amplifier": 10,
                        "show_particles": false,
                        "show_icon": false
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_i-dash-count",
                    "operation": "add",
                    "change": -1
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "*:*_b-reloading-dashes",
                                "comparison": "==",
                                "compare_to": 0
                            },
                            {
                                "type": "origins:resource",
                                "resource": "*:*_i-dash-count",
                                "comparison": "<",
                                "compare_to": 3
                            }
                        ]
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_b-run-reload-dashes",
                        "operation": "set",
                        "change": 1
                    }
                }
            ]
        }
    },
    "load-back-dashes": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_b-run-reload-dashes",
            "comparison": "==",
            "compare_to": 1
        },
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_b-run-reload-dashes",
                    "operation": "set",
                    "change": 0
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_b-reloading-dashes",
                    "operation": "set",
                    "change": 1
                },
                {
                    "type": "origins:trigger_cooldown",
                    "power": "*:*_bar-cooldown"
                }
            ]
        }
    },
    "on-cooldown-over": {
        "type": "origins:action_over_time",
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_b-reloading-dashes",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_bar-cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_i-dash-count",
                    "operation": "add",
                    "change": 1
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_i-dash-count",
                        "comparison": "<",
                        "compare_to": 3
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_b-run-reload-dashes",
                        "operation": "set",
                        "change": 1
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_b-reloading-dashes",
                        "operation": "set",
                        "change": 0
                    }
                }
            ]
        }
    }
}